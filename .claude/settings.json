{
  "version": "1.0",
  "project_name": "app_termostato",
  "quality_gates": {
    "max_complexity": 10,
    "min_maintainability": 20,
    "min_pylint_score": 8.0,
    "max_function_lines": 50
  },
  "metrics": {
    "tools": {
      "complexity": "radon cc",
      "maintainability": "radon mi",
      "size": "radon raw",
      "linting": "pylint"
    },
    "output_dir": "quality/reports/"
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "cmd=$(cat | jq -r '.tool_input.command'); if echo \"$cmd\" | grep -q 'git commit'; then python quality/scripts/calculate_metrics.py . && python quality/scripts/validate_gates.py quality/reports/quality_*.json || exit 2; fi"
          }
        ]
      }
    ]
  }
}
